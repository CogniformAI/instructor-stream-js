{
  "name": "@cogniformai/instructor-stream-js",
  "version": "0.0.0",
  "private": true,
  "description": "streaming-first structured outputs for llms",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:workspace": "pnpm -r test",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "build": "tsup",
    "build:workspace": "pnpm -r build",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "lint:workspace": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx}\"",
    "format:workspace": "pnpm -r format",
    "type-check": "tsc --noEmit",
    "type-check:workspace": "pnpm -r type-check",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && pnpm -r clean",
    "clean:workspace": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky || true",
    "release": "pnpm build:workspace && bumpp && changelogen --release && release-it",
    "push-pr": "pnpm pre-push && git push -u origin HEAD && gh pr create --fill --label auto-pr",
    "test-actions": "./scripts/test-actions.sh",
    "pre-push": "./scripts/pre-push.sh",
    "test-release": "./scripts/test-release.sh",
    "validate-release": "pnpm pre-push && echo 'âœ… Ready for release'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cogniformai/instructor-stream-js.git"
  },
  "keywords": [
    "llm",
    "structured",
    "outputs",
    "zod"
  ],
  "author": "David Robertson <info@drobertson.pro> (https://x.com/davidalexr987)",
  "contributors": [
    "Dimitri Kennedy",
    "Jason Liu"
  ],
  "maintainers": [
    "David Robertson <info@drobertson.pro>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cogniformai/instructor-stream-js/issues"
  },
  "homepage": "https://github.com/cogniformai/instructor-stream-js#readme",
  "dependencies": {
    "llm-polyglot": "^2.6.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "0.57.0",
    "@ianvs/prettier-plugin-sort-imports": "4.5.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.2.4",
    "bumpp": "^10.2.2",
    "changelogen": "^0.6.2",
    "dotenv": "^17.2.1",
    "husky": "^9.1.7",
    "openai": "5.10.1",
    "oxlint": "^1.7.0",
    "prettier": "latest",
    "release-it": "^19.0.4",
    "tiktoken": "^1.0.21",
    "ts-inference-check": "^0.3.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "openai": ">=5.10.1",
    "zod": "^3.25.0 || ^4.0.0"
  }
}
