{
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "paths": {
      "@/*": ["./packages/instructor-stream/src/*", "./src/*"],
      "@core/*": ["./src/core/*"],
      "@providers/*": ["./src/providers/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.cjs",
    "packages/instructor-stream/src/core/*/node_modules",
    "packages/instructor-stream/src/core/*/dist",
    "packages/instructor-stream/src/providers/*/node_modules",
    "packages/instructor-stream/src/providers/*/dist",
    ".oxlintrc.json",
    "_ai/**",
    "packages/examples/**",
    "packages/providers/tests/**",
    "packages/providers/examples/**",
    "benchmarks/**"
  ]
}
